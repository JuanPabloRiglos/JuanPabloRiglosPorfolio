---
const {project} = Astro.props
console.log(project);
//iconos
import TailwindIcon from "../icons/TecnologiesIcons/TailwindIcon.astro";
import ReactJSIcon from "../icons/TecnologiesIcons/ReactJSIcon.astro";
import ReactQueryIcon from "../icons/TecnologiesIcons/ReactQueryIcon.astro";
import JavascriptIcon from "../icons/TecnologiesIcons/JavascriptIcon.astro";
import ViteIcon from "../icons/TecnologiesIcons/ViteIcon.astro"
import Mongo from "../icons/TecnologiesIcons/Mongo.astro";
---
<div class="principalDiv border-gray-300 mb-4 rounded-xl hover:bg-gray-700 hover:cursor-pointer
w-full flex flex-col p-2
sm:w-4/5 sm:mx-auto
lg:w-full lg:mb-6">
<main class="rounded-xl flex flex-col gap-2 md:w-full md:flex md:flex-row md:gap-4">
    <img  class=" rounded-xl md:w-1/2" src={project?.img} alt={`Imagen del proyecto ${project?.title}`}>
    <section class="md:w-1/2 flex flex-col justify-around items-center gap-2">
        <h2 class="mb-8 text-orange-500 md:mt-2 font-semibold text-xl text-pretty">{project?.title}</h2>
        <div class="sm:w-[90%] m-auto pl-2 flex items-center flex-wrap md:flex-col
        border-2 p-2 rounded-xl bg-slate-200/80">
            <h3 class=" text-gray-900 font-semibold">Tecnologias utilizadas </h3>
            <article class="flex gap-2 p-2 ">
                <TailwindIcon class="size-6"/>
                <ReactJSIcon class="size-6"/>
                <ReactQueryIcon class="size-6"/>
                <JavascriptIcon class="size-6"/>
                <ViteIcon class="size-6"/>
                <Mongo class="size-6"/>
            </article>
         
        </div>
        <button class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-orange-500 rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white focus:ring-4 focus:outline-none focus:ring-purple-800">
            <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-gray-900 rounded-md group-hover:bg-opacity-0">
           Conoce m√°s de este proyecto
            </span>
    </section>
</main>
    <article class=" p-2 md:p-4 m-auto">
        <h4 class="text-pretty my-2 text-orange-300">{project?.subtitle}</h4>
        <hr>
        <p class="text-pretty m-2">{project?.description}</p>
    </article>
</div>

<style>
.principalDiv{
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
}
</style>