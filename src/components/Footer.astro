---
import AstroIcon from "../icons/TecnologiesIcons/AstroIcon.astro"
import TailwindIcon from "../icons/TecnologiesIcons/TailwindIcon.astro"
import Flowbite from "../icons/TecnologiesIcons/FlowbiteIcon.astro"

const currentYear = new Date().getFullYear();
---

<footer class="footer-container">
    <div class="footer-divider"></div>

    <div class="footer-content">
        <div class="footer-header">
            <div class="footer-logo-section">
                <h3 class="footer-title">Juan Pablo Riglos</h3>
                <span class="footer-subtitle">Frontend Developer</span>
            </div>

            <div class="tech-stack-section">
                <span class="built-with-text">Desarrollado con</span>
                <div class="tech-icons">
                    <div class="tech-icon-wrapper" title="Astro">
                        <AstroIcon class="tech-icon"/>
                    </div>
                    <div class="tech-icon-wrapper" title="Tailwind CSS">
                        <TailwindIcon class="tech-icon"/>
                    </div>
                    <div class="tech-icon-wrapper" title="Flowbite">
                        <Flowbite class="tech-icon"/>
                    </div>
                </div>
            </div>
        </div>

        <nav class="footer-nav">
            <a href="#top" class="footer-link">Inicio</a>
            <span class="nav-separator">•</span>
            <a href="#experiencia" class="footer-link">Experiencia</a>
            <span class="nav-separator">•</span>
            <a href="#proyectos" class="footer-link">Proyectos</a>
            <span class="nav-separator">•</span>
            <a href="#about" class="footer-link">Sobre Mí</a>
            <span class="nav-separator">•</span>
            <a href="#contact" class="footer-link">Contacto</a>
        </nav>

        <div class="footer-bottom">
            <p class="copyright">
                © {currentYear} Juan Pablo Riglos. Todos los derechos reservados.
            </p>
            <p class="made-with">
                Hecho con
                <svg class="heart-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                </svg>
                y mucho
                <svg class="coffee-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V9a1 1 0 00-1.447-.894l-2 1z" />
                </svg>
            </p>
        </div>
    </div>
</footer>

<style>
.footer-container {
    margin-top: 6rem;
    padding: 0 1rem 2rem;
    position: relative;
}

.footer-divider {
    width: 100%;
    height: 1px;
    background: linear-gradient(
        90deg,
        transparent,
        rgba(249, 115, 22, 0.4) 20%,
        rgba(168, 85, 247, 0.4) 50%,
        rgba(249, 115, 22, 0.4) 80%,
        transparent
    );
    margin-bottom: 3rem;
    animation: shimmerDivider 3s ease-in-out infinite;
}

.footer-content {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

/* Header */
.footer-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
}

.footer-logo-section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.footer-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgba(229, 231, 235, 0.95);
    margin: 0;
}

.footer-subtitle {
    font-size: 0.875rem;
    color: rgb(251, 146, 60);
    font-weight: 500;
}

.tech-stack-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
}

.built-with-text {
    font-size: 0.875rem;
    color: rgba(156, 163, 175, 0.8);
}

.tech-icons {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.tech-icon-wrapper {
    padding: 0.5rem;
    background: rgba(31, 41, 55, 0.5);
    border: 1px solid rgba(75, 85, 99, 0.3);
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    cursor: pointer;
    backdrop-filter: blur(8px);
}

.tech-icon-wrapper:hover {
    background: rgba(31, 41, 55, 0.8);
    border-color: rgba(249, 115, 22, 0.5);
    transform: translateY(-3px) rotate(5deg);
    box-shadow: 0 4px 12px rgba(249, 115, 22, 0.2);
}

.tech-icon {
    width: 1.5rem;
    height: 1.5rem;
    display: block;
}

/* Navigation */
.footer-nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 0;
}

.footer-link {
    color: rgba(209, 213, 219, 0.8);
    font-size: 0.9375rem;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
}

.footer-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: linear-gradient(90deg, rgba(249, 115, 22, 0.6), rgba(168, 85, 247, 0.6));
    transition: width 0.3s ease;
}

.footer-link:hover {
    color: rgb(251, 146, 60);
}

.footer-link:hover::after {
    width: 100%;
}

.nav-separator {
    color: rgba(75, 85, 99, 0.5);
    font-size: 0.75rem;
}

/* Bottom section */
.footer-bottom {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(75, 85, 99, 0.2);
}

.copyright {
    font-size: 0.875rem;
    color: rgba(156, 163, 175, 0.7);
    margin: 0;
}

.made-with {
    font-size: 0.8125rem;
    color: rgba(156, 163, 175, 0.6);
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
}

.heart-icon,
.coffee-icon {
    width: 1rem;
    height: 1rem;
}

.heart-icon {
    color: rgb(239, 68, 68);
    animation: heartbeat 1.5s ease-in-out infinite;
}

.coffee-icon {
    color: rgb(161, 98, 7);
}

/* Animations */
@keyframes shimmerDivider {
    0%, 100% {
        opacity: 0.5;
    }
    50% {
        opacity: 1;
    }
}

@keyframes heartbeat {
    0%, 100% {
        transform: scale(1);
    }
    25% {
        transform: scale(1.2);
    }
    50% {
        transform: scale(1);
    }
}

/* Responsive */
@media (min-width: 768px) {
    .footer-header {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    .footer-logo-section {
        align-items: flex-start;
        text-align: left;
    }

    .tech-stack-section {
        align-items: flex-end;
    }

    .footer-bottom {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
}

@media (max-width: 640px) {
    .footer-nav {
        flex-direction: column;
        gap: 0.5rem;
    }

    .nav-separator {
        display: none;
    }

    .tech-icons {
        gap: 0.75rem;
    }

    .tech-icon-wrapper {
        padding: 0.4rem;
    }

    .tech-icon {
        width: 1.25rem;
        height: 1.25rem;
    }
}
</style>
