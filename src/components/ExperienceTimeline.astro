<style>
/* Línea del timeline con efecto de dibujo progresivo */
.timeline-line {
    position: relative;
}

.timeline-line::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 2px;
    height: 0;
    background: linear-gradient(180deg, rgba(249, 115, 22, 0.5) 0%, rgba(249, 115, 22, 0.2) 100%);
    animation: drawLine 2s ease-out forwards;
    animation-delay: 0.5s;
}

/* Animación suave para "Actualidad" */
@keyframes pulse-soft {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.7;
    }
}

.animate-pulse-soft {
    animation: pulse-soft 2s ease-in-out infinite;
}

/* Hover effect en cada experiencia */
.timeline-content {
    background: transparent;
}

.timeline-item:hover .timeline-content {
    background: rgba(31, 41, 55, 0.3);
    transform: translateX(4px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.timeline-item:hover .timeline-badge {
    ring-color: rgba(249, 115, 22, 0.7);
    transform: scale(1.15);
    box-shadow: 0 0 15px rgba(249, 115, 22, 0.4);
}

/* Badge pulse para items actuales */
.current-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
}

/* Animación de entrada */
.timeline-item.visible {
    animation: fadeInLeft 0.6s ease-out forwards;
}

@keyframes fadeInLeft {
    from {
        opacity: 0;
        transform: translateX(-20px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes drawLine {
    from {
        height: 0;
    }
    to {
        height: 100%;
    }
}

/* Responsive */
@media (max-width: 768px) {
    .timeline-item:hover .timeline-content {
        transform: translateX(2px);
    }

    .timeline-item:hover .timeline-badge {
        transform: scale(1.08);
    }
}
</style>

<script>
    // Intersection Observer para animación de entrada
    const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.2
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
                setTimeout(() => {
                    entry.target.classList.add('visible');
                }, index * 150);
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);

    document.addEventListener('DOMContentLoaded', () => {
        const items = document.querySelectorAll('.timeline-item');
        items.forEach(item => observer.observe(item));
    });
</script>
