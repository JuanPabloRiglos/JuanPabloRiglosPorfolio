---
import Hero from '../components/Hero.astro';
import ExperienceTimeline from '../components/ExperienceTimeline.astro';
import PojectsSection from '../components/PojectsSection.astro';
import SectionContainer from '../components/SectionContainer.astro';
import RuteIcon from '../icons/RuteIcon.astro';
import DesktopIcon from '../icons/DesktopIcon.astro'
import PersonsIcon from "../icons/PersonsIcon.astro"
import Layout from '../layouts/Layout.astro';
import AboutMe from '../components/AboutMe.astro';
import {Contact} from '../components/Contact.jsx'
import SocialPillsSecction from '../components/SocialPillsSecction.astro';
import CurrentWork from '../components/CurrentWork.astro';
---

<Layout title=" Juan Pablo Riglos, Desarrollador y Programador web üöÄ"
description="Bienvenidos a mi porfolio, soy Juan Pablo Riglos, Frontend developer con m√°s de 3 a√±os de experiencia, hecha un vistazo a mis trabajos previos y no dudes en contactarme.">
	<main class="mt-24 sm:mt-64  lg:mt-44">
	<SectionContainer id="top">
		<Hero/>
	</SectionContainer>
	<SectionContainer id="current">
		<CurrentWork/>
	</SectionContainer>
	<SectionContainer id="experiencia">
		<header class="flex flex-nowrap gap-4 z-40">
			<h2 class="mb-8 text-gray-200/90 font-semibold text-xl text-pretty"> Experiencia
			</h2>
			<RuteIcon class="text-gray-200/90"/>
		</header>
		<ExperienceTimeline/>
	</SectionContainer>

	<SectionContainer id="proyectos">
		<header class="flex flex-nowrap gap-4 z-40">
			<h2 class="mb-8 text-gray-200/90 font-semibold text-xl text-pretty"> Proyectos </h2>
			<DesktopIcon class="text-gray-200/90"/>
		</header>
		<PojectsSection/>
	</SectionContainer>

	<SectionContainer id="about">
		<AboutMe/>
	</SectionContainer>

	<SectionContainer id="contact">
		<Contact client:visible/>
		<div class="social-section-wrapper">
			<h2 class="social-section-title"> Tambi√©n puedes encontrarme
				<PersonsIcon/>
			</h2>
			<SocialPillsSecction/>
		</div>
	</SectionContainer>
	

	</main>
</Layout>

<style>
/* Social Pills Section */
.social-section-wrapper {
	margin-top: 4rem;
	padding-top: 3rem;
	border-top: 1px solid rgba(75, 85, 99, 0.2);
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 2rem;
}

.social-section-title {
	display: flex;
	align-items: center;
	gap: 1rem;
	text-align: center;
	color: rgba(229, 231, 235, 0.9);
	font-weight: 600;
	font-size: 1.25rem;
	margin: 0;
	text-wrap: balance;
}

/* Responsive */
@media (max-width: 768px) {
	.social-section-wrapper {
		margin-top: 3rem;
		padding-top: 2rem;
		gap: 1.5rem;
	}

	.social-section-title {
		font-size: 1.125rem;
	}
}

@media (max-width: 640px) {
	.social-section-wrapper {
		margin-top: 2.5rem;
		padding-top: 1.5rem;
	}

	.social-section-title {
		font-size: 1rem;
	}
}
</style>
